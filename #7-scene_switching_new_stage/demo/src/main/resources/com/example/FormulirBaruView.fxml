<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.example.FormulirBaruController" spacing="15" 
alignment="CENTER" 
prefHeight="200" 
prefWidth="300">
    <Label text="Jendela Kedua: Input Data Tambahan" style="-fx-font-size: 14pt;"/>
    <TextField promptText="Masukkan data..." fx:id="txtInputBaru"/>
    <Button text="Tutup Jendela" onAction="#handleTutup" fx:id="btnTutup"/>
</VBox>